<Window x:Class="WpfApp5.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="Меню" Height="450" Width="800" Icon="/logo.png">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFC3C2C2" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button Content="Список" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,100" Click="Button_Click" Width="100" Height="30" Cursor="Hand"/>
        <Button Content="Добавить" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click_2" Width="100" Height="30" Cursor="Hand"/>
        <Button Content="Настройки" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0" Click="Button_Click_1" Width="100" Height="30" Cursor="Hand"/>
        <Image HorizontalAlignment="Left" Height="155" Margin="60,55,0,0" VerticalAlignment="Top" Width="217" Source="/logo.png"/>
    </Grid>
</Window>
